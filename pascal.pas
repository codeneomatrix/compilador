PROGRAM EJERDIV;
             var A,B: Integer;
             var soluc: Integer;
begin
     ClrScr;
     WRITELN('introdu');
     
     WRITELN('introdu'); READLN(A);
     WRITELN('introdu'); READLN(B);
     

     WRITELN('introdu');
              soluc := (A div B); {div hace la division de 2 numeros enteros}
     WRTELN(soluc);
     

     WRITELN('introdu');
              soluc :=( A mod B); {mod muestra el resto de una division de 2 numeros enteros}
     WRITELN(soluc);
end.